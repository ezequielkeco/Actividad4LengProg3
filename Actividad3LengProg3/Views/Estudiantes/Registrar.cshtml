@model EstudianteViewModel

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
     }
}

<h2>Registro de estudiantes</h2><br />

<form asp-action="Registrar" method="post">
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="NombreCompleto">Nombre Completo</label>
                <input asp-for="NombreCompleto" class="form-control" />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Matricula">Matrícula</label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Carrera" class="form-label">Carrera</label>
                <select asp-for="Carrera" asp-items="Model.CarrerasDisponibles" class="form-select">
                    <option value="">Seleccione una carrera</option>
                </select>
                <span asp-validation-for="Carrera" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="CorreoInstitucional">Correo Institucional</label>
                <input asp-for="CorreoInstitucional" class="form-control" />
                <span asp-validation-for="CorreoInstitucional" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Telefono">Teléfono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FechaNacimiento">Fecha de nacimiento</label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Genero" class="form-label">Género</label>
                <select asp-for="Genero" asp-items="Model.GenerosDisponibles" class="form-select">
                    <option value="">Seleccione un género</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Tanda" class="form-label"></label>
                <select asp-for="Tanda" asp-items="Model.TandasDisponibles" class="form-select">
                    <option value="">Seleccione una tanda</option>
                </select>
                <span asp-validation-for="Tanda" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="TipoIngreso" class="form-label">Tipo de ingreso</label>
                <select asp-for="TipoIngreso" asp-items="Model.TipoDeIngreso" class="form-select">
                    <option value="">Seleccione el tipo de ingreso</option>
                </select>
                <span asp-validation-for="TipoIngreso" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="EstaBecado" class="form-check-label">¿Está becado?</label>
                <input asp-for="EstaBecado" class="form-check-input" type="checkbox" value="false"/>
                <label asp-for="EstaBecado" class="form-check-label">Si</label>
                <span asp-validation-for="EstaBecado" class="text-danger"></span><br /><br />
                <input value="false" asp-for="AceptarTerminos" class="form-check-input" type="checkbox" />
                <label asp-for="AceptarTerminos" class="form-check-label"><a href="#"> Aceptar términos</a></label>
                <span asp-validation-for="AceptarTerminos" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="PorcentajeBeca">Porcentaje de la beca</label>
                <input asp-for="PorcentajeBeca" class="form-control" type="number" />
                <span asp-validation-for="PorcentajeBeca" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row mb-3">
            <div class="col-md-6">
                <button class="btn btn-success" type="submit">Registrar</button>
            </div>
        </div>
    </div>
</form>